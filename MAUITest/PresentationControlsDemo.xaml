<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITest.PresentationControlsDemo"
             Title="PresentationControlsDemo">
    <VerticalStackLayout>
        <BoxView
            Color="Green"
            HeightRequest="200"/>

        <Ellipse
            Margin="0,-100,0,0"
            Fill="Yellow"
            HeightRequest="200"
            WidthRequest="200"
            Stroke="Red"
            StrokeThickness="10"/>
        
        <Label
            Text="Andres Velez"
            TextColor="Black"
            FontSize="Title"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"/>

        <Line
            Stroke="Purple"
            StrokeThickness="5"
            X1="0"
            Y1="1"
            X2="500"
            Y2="0"/>




    </VerticalStackLayout>
</ContentPage>