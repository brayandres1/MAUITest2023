<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITest.PresentationControlsDemo"
             Title="PresentationControlsDemo">
    <VerticalStackLayout>
        <BoxView
            Color="Green"
            HeightRequest="200"/>

        <Label
            Text="Este es un label"
            TextColor="Black"
            FontSize="Title"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"/>

        <Ellipse
            Fill="Yellow"
            HeightRequest="200"
            WidthRequest="200"/>

    </VerticalStackLayout>
</ContentPage>